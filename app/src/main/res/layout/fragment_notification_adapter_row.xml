<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/frg_notify_adapter_layout"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:padding="10sp"
            android:layout_height="wrap_content"
>
            <ImageView
                android:id="@+id/frg_notify_adapter_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="26dp"
                android:src="@drawable/response" />

            <TextView
                android:id="@+id/frg_notify_adapter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/frg_notify_adapter_icon"
                android:text="specialization"
                android:textColor="@color/colorMutedGray2" />

            <TextView
                android:id="@+id/frg_notify_adapter_subtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/frg_notify_adapter_text"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/frg_notify_adapter_icon"
                android:text="specialization"
                android:textColor="@color/colorMutedGray2" />


            <TextView
                android:id="@+id/frg_notify_adapter_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frg_notify_adapter_subtext"
                android:layout_marginStart="16dp"
                android:textSize="13sp"
                android:layout_marginTop="3sp"
                android:layout_toRightOf="@id/frg_notify_adapter_icon"
                android:text="date"
                android:textColor="@color/colorMutedText" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>