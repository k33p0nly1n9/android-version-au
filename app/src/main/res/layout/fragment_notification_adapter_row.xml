<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frg_notify_adapter_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:padding="10sp">

            <ImageView
                android:id="@+id/frg_notify_adapter_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="26dp"
                android:src="@drawable/response" />

            <TextView
                android:id="@+id/frg_notify_adapter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/frg_notify_adapter_icon"
                android:text="specialization"
                android:textColor="@color/colorMutedGray2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/frg_notify_adapter_subtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frg_notify_adapter_text"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/frg_notify_adapter_icon"
                android:text="specialization"
                android:textColor="@color/colorMutedGray2" />


            <TextView
                android:id="@+id/frg_notify_adapter_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frg_notify_adapter_subtext"
                android:layout_marginStart="16dp"
                android:layout_marginTop="3sp"
                android:layout_toEndOf="@id/frg_notify_adapter_icon"
                android:text="date"
                android:textColor="@color/colorMutedText"
                android:textSize="13sp" />

            <View
                android:id="@+id/orders_adapter_fragment_view"
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:layout_below="@id/frg_notify_adapter_date"
                android:layout_marginTop="10sp"
                android:background="@color/colorMutedGray2"
          >

            </View>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>