<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="20sp"
    android:layout_gravity="center"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <EditText
        android:id="@+id/dialog_answer_update_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10sp"
        android:hint="Ответ"
        android:maxLength="200"
        android:padding="10sp"></EditText>

    <Button
        android:id="@+id/dialog_answer_update_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_answer_update_text"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20sp"
        android:textAllCaps="false"
        android:layout_marginEnd="15sp"
        android:padding="10sp"
        android:text="Сохранить"></Button>

    <Button
        android:id="@+id/dialog_answer_update_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_below="@id/dialog_answer_update_text"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10sp"
        android:padding="10sp"
        android:text="Отменить"></Button>
</RelativeLayout>