<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/orders_adapter_row_layout"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:layout_margin="4sp"
        android:layout_marginTop="5sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            app:layout_constraintBottom_toTopOf="@id/orders_adapter_layout"
            app:layout_constraintTop_toTopOf="@id/executors_adapter_name">

            <TextView
                android:id="@+id/orders_adapter_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="79dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="42dp"
                android:layout_marginBottom="22dp"
                android:text="1"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/orders_adapter_price"
                app:layout_constraintStart_toEndOf="@+id/orders_adapter_deadline"
                app:layout_constraintTop_toBottomOf="@+id/orders_adapter_descr" />

            <TextView
                android:id="@+id/orders_adapter_title"
                android:layout_width="175dp"
                android:layout_height="35dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"
                android:text="Title"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/orders_adapter_descr"
                app:layout_constraintEnd_toStartOf="@+id/orders_adapter_created"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/orders_adapter_descr"
                android:layout_width="358dp"
                android:layout_height="120dp"
                android:layout_marginEnd="190dp"
                android:text="description"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/orders_adapter_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.604" />

            <TextView
                android:id="@+id/orders_adapter_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="17dp"
                android:text="date"
                app:layout_constraintBottom_toTopOf="@id/orders_adapter_descr"
                app:layout_constraintStart_toEndOf="@id/orders_adapter_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/orders_adapter_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Грузоперевозка"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.964"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05" />

            <TextView
                android:id="@+id/orders_adapter_price"
                android:layout_width="73dp"
                android:layout_height="21dp"
                android:layout_marginStart="291dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="23dp"
                android:layout_marginBottom="7dp"
                android:text="Price"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/orders_adapter_deadline"
                app:layout_constraintTop_toBottomOf="@+id/orders_adapter_descr"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/orders_adapter_deadline"
                android:layout_width="141dp"
                android:layout_height="22dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="343dp"
                android:layout_marginBottom="5dp"
                android:text="Dealine"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/orders_adapter_descr"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>