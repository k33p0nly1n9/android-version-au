<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/service_adapter_row_layout"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4sp"
            app:layout_constraintBottom_toTopOf="@id/service_adapter_id"
            app:layout_constraintTop_toTopOf="@id/service_adapter_title">

            <TextView
                android:id="@+id/service_adapter_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27sp"
               android:hint="id:"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/service_adapter_title"
                android:layout_width="168dp"
                android:layout_height="21dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="291dp"
                android:layout_marginBottom="3dp"
                android:hint="title"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/service_adapter_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/service_adapter_id"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/service_adapter_price"
                android:layout_width="172dp"
                android:layout_height="19dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="242dp"
                android:layout_marginBottom="8dp"
                android:hint="price"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/service_adapter_title"
                app:layout_constraintTop_toBottomOf="@id/service_adapter_title"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>