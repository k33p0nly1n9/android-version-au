<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_profile_reviews_adapter_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_weight="1"
        android:padding="5sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_profile_reviews_adapter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_profile_reviews_adapter_image"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="5sp"
        android:layout_marginStart="15sp"
        android:text=""
        android:textAlignment="center" />

    <TextView
        android:id="@+id/fragment_profile_reviews_adapter_assessment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30sp"
        android:padding="5sp"
        android:text="60"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/fragment_profile_reviews_adapter_image"
        app:srcCompat="@drawable/add_a_photo_black_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15sp"
        android:layout_marginTop="10dp"
        android:padding="5sp" />

    <TextView
        android:id="@+id/fragment_profile_reviews_adapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/fragment_profile_reviews_adapter_image"
        android:text="imya familiya" />
    </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>