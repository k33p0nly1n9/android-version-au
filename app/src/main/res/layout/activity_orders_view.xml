<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fragments.Orders_view_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/orders_view_card"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:padding="5sp">

                    <TextView
                        android:id="@+id/order_view_section_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="221dp"
                        android:text="TextView"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/order_view_title_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:text="TextView"
                        android:textAlignment="center" />


                    <TextView
                        android:id="@+id/order_view_desc_act"
                        android:layout_width="378dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_view_title_act"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="10dp"
                        android:hint="desc" />

                    <TextView
                        android:id="@+id/order_view_created_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_view_desc_act"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8sp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="16dp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/order_view_deadline_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_view_desc_act"
                        android:layout_marginStart="73dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginBottom="16dp"
                        android:layout_toRightOf="@id/order_view_created_act"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/order_view_price_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="4dp"
                        android:layout_toRightOf="@id/order_view_title_act"
                        android:text="TextView"
                        android:textAlignment="center" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/order_view_btn_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_view_card"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Откликнуться"
                android:textSize="11sp" />

            <Button
                android:id="@+id/order_view_btnViewPrf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_view_card"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8sp"
                android:text="Посмотреть профиль"
                android:textSize="11sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/order_view_recycler_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_view_btn_act"
                android:layout_margin="10sp"

                android:orientation="vertical"></androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
