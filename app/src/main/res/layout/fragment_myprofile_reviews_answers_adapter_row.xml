<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myprofile_reviews_answers_adapter_row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/myprofile_reviews_answers_adapter_row_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="5sp"
            android:background="@color/colorBbb2"
            android:padding="8sp">

            <TextView
                android:id="@+id/myprofile_reviews_answers_adapter_row_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/myprofile_reviews_answers_adapter_row_photo"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10sp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="10sp"
                android:text="desciptiondesciptiondesciption" />


            <ImageView
                android:id="@+id/myprofile_reviews_answers_adapter_row_photo"
                android:layout_width="60sp"
                android:layout_height="50sp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10dp"
                android:padding="5sp"
                app:srcCompat="@drawable/executors_default_image" />

            <TextView
                android:id="@+id/myprofile_reviews_answers_adapter_row_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/myprofile_reviews_answers_adapter_row_photo"
                android:text="TextView" />

            <TextView
                android:id="@+id/myprofile_reviews_answers_adapter_row_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/myprofile_reviews_answers_adapter_row_name"
                android:layout_marginStart="10sp"
                android:layout_marginTop="3sp"
                android:layout_toRightOf="@id/myprofile_reviews_answers_adapter_row_photo"
                android:text="20/06/2020"
                android:textAlignment="center"
                android:textColor="@color/colorMutedText"
                android:textSize="12sp" />

            <Button
                android:id="@+id/myprofile_reviews_answers_adapter_row_btn_popup"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5sp"
                android:background="@drawable/ic_actions_more_vert"
                android:clickable="true"
                android:padding="5sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>