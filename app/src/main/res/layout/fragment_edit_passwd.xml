<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragments.Fragment_edit_passwd">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:background="@color/colorBackground">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:hint="Текущий пароль"
                android:layout_marginTop="20sp"
                android:layout_alignParentTop="true"
                android:id="@+id/frg_edit_passwd_et_oldpasswd"
                android:textColorHint="@color/colorMutedText"
                app:passwordToggleEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textColorHint="@color/colorMutedText"
                    android:textColor="@color/colorMutedGray2"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:hint="Новый пароль"
                android:layout_marginTop="20sp"
                android:layout_below="@id/frg_edit_passwd_et_oldpasswd"
                android:id="@+id/frg_edit_passwd_et_newpasswd"
                android:textColorHint="@color/colorMutedText"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:passwordToggleEnabled="true"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textColorHint="@color/colorMutedText"
                    android:textColor="@color/colorMutedGray2"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:hint="Повторите новый пароль"
                android:layout_marginTop="20sp"
                android:layout_below="@id/frg_edit_passwd_et_newpasswd"
                android:id="@+id/frg_edit_passwd_et_newpasswdconfirm"
                android:textColorHint="@color/colorMutedText"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               app:passwordToggleEnabled="true"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textColorHint="@color/colorMutedText"
                    android:textColor="@color/colorMutedGray2"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/frg_edit_passwd_btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4sp"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="4sp"
                android:layout_marginBottom="20sp"
                android:background="@color/colorMutedGray2"
                android:enabled="true"
                android:padding="10dp"
                android:text="@string/btn_save"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <Button
                android:id="@+id/frg_edit_passwd_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4sp"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="4sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20sp"
                android:background="@color/colorMutedGray2"
                android:enabled="true"
                android:padding="10dp"
                android:text="@string/btn_cancel"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />
        </RelativeLayout>
</FrameLayout>