<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_form_serv_adapter_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8sp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/profile_form_serv_adapter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/profile_form_serv_adapter_price"
                android:hint="Title"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/profile_form_serv_adapter_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:inputType="numberDecimal"
                android:layout_centerVertical="true"
                android:autoSizeMaxTextSize="13sp"
                android:layout_toLeftOf="@id/profile_form_serv_adapter_check"
                android:hint="2000000"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/profile_form_serv_adapter_check"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:outlineAmbientShadowColor="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:outlineSpotShadowColor="@color/colorWhite"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>