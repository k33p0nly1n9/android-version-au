<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_form_serv_adapter_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBbb2"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="2sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4sp"
            android:background="@color/colorBbb2">

            <TextView
                android:id="@+id/profile_form_serv_adapter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:ems="13"
                android:textStyle="bold"
                android:text="Реставрация старых книг, создание своего переплета"
             />

            <TextView
                android:id="@+id/profile_form_serv_adapter_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:layout_toEndOf="@id/profile_form_serv_adapter_title"
                android:layout_centerVertical="true"
                android:text="2000"
                android:textAlignment="center"
                android:layout_marginEnd="10sp"
                android:textSize="16sp" />

            <View
                android:id="@+id/profile_form_serv_adapter_view"
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:layout_below="@id/profile_form_serv_adapter_title"
                android:layout_marginTop="10sp"
                android:background="@color/colorMutedGray2"
                android:padding="10sp">
            </View>

            <CheckBox
                android:id="@+id/profile_form_serv_adapter_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_marginStart="6sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>