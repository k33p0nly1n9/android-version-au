<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/orders_adapter_fragment_row_layout"
    android:background="@color/gray"
    android:layout_width="match_parent"
    android:padding="5sp"
    android:layout_marginTop="4sp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


            <TextView
                android:id="@+id/orders_adapter_fragment_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_adapter_fragment_desc"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10sp"
                android:layout_toLeftOf="@id/orders_adapter_fragment_deadline"
                android:hint="раздел по ремонту и бытовым проблемам"/>

            <TextView
                android:id="@+id/orders_adapter_fragment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="10dp"
                android:hint="title"
                android:textAlignment="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/orders_adapter_fragment_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_adapter_fragment_price"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10dp"
                android:hint="description" ></TextView>

            <TextView
                android:id="@+id/orders_adapter_fragment_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10sp"
                android:layout_toLeftOf="@id/orders_adapter_fragment_btn_popup"
                android:hint="08/06/2020"
                android:textAlignment="center"

                />

            <TextView
                android:id="@+id/orders_adapter_fragment_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_adapter_fragment_desc"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10sp"
                android:hint="deadline"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/orders_adapter_fragment_price"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_adapter_fragment_title"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:hint="price" />

            <Button
                android:id="@+id/orders_adapter_fragment_btn_popup"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="10sp"
                android:background="@drawable/three_dots"
                android:clickable="true"></Button>
</RelativeLayout>