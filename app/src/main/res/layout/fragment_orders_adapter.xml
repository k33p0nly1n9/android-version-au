<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/orders_adapter_fragment_row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4sp"
    android:orientation="vertical"
    android:padding="5sp">


    <TextView
        android:id="@+id/orders_adapter_fragment_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orders_adapter_fragment_desc"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_toLeftOf="@id/orders_adapter_fragment_txtdeadline"
        android:hint="раздел по ремонту и бытовым проблемам"
        android:textColor="@color/colorMutedGray2" />

    <TextView
        android:id="@+id/orders_adapter_fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10sp"
        android:layout_toLeftOf="@id/orders_adapter_fragment_created"
        android:hint="title"
        android:textColor="@color/colorMutedGray2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/orders_adapter_fragment_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orders_adapter_fragment_price"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10dp"
        android:hint="description"
        android:textColor="@color/colorMutedGray2"></TextView>

    <TextView
        android:id="@+id/orders_adapter_fragment_created"
        android:layout_width="90sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10sp"
        android:layout_toLeftOf="@id/orders_adapter_fragment_btn_popup"
        android:hint="08/06/2020"
        android:textAlignment="center"
        android:textColor="@color/colorMutedGray2"

        />

    <TextView
        android:id="@+id/orders_adapter_fragment_txtdeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orders_adapter_fragment_desc"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/orders_adapter_fragment_deadline"
        android:text="До: "
        android:textColor="@color/colorMutedText" />

    <TextView
        android:id="@+id/orders_adapter_fragment_deadline"
        android:layout_width="90sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/orders_adapter_fragment_desc"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:hint="08/06/202008/06/2020"
        android:textColor="@color/colorMutedGray2" />

    <TextView
        android:id="@+id/orders_adapter_fragment_txtprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orders_adapter_fragment_title"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorMutedText"
        android:text="Бюджет: "/>

    <TextView
        android:id="@+id/orders_adapter_fragment_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orders_adapter_fragment_title"
     android:layout_toRightOf="@id/orders_adapter_fragment_txtprice"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:hint="22203"
        android:textColor="@color/colorMutedGray2" />

    <Button
        android:id="@+id/orders_adapter_fragment_btn_popup"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4sp"
        android:background="@drawable/menu_icon"
        android:clickable="true"></Button>
</RelativeLayout>