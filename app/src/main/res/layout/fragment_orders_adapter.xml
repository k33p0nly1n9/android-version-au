<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/orders_adapter_fragment_row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4sp"
        android:layout_marginTop="5sp"
        android:padding="5dp">


       <RelativeLayout
           android:id="@+id/executors_adapter_id"
           android:layout_width="match_parent"
           android:layout_height="match_parent"

           >
            <TextView
                android:id="@+id/orders_adapter_fragment_section"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="221dp"
                android:hint="section"
                android:textAlignment="center"
               android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/orders_adapter_fragment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:hint="title"
                android:textAlignment="center"
                android:layout_alignParentLeft="true"

                />

            <TextView
                android:id="@+id/orders_adapter_fragment_desc"
                android:layout_width="376dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="5sp"
                android:hint="desc"
                android:textAlignment="center"
          android:layout_below="@id/orders_adapter_fragment_price"/>

            <TextView
                android:id="@+id/orders_adapter_fragment_created"
                android:layout_width="154dp"
                android:layout_height="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8sp"
                android:layout_marginBottom="16dp"
                android:hint="created date"
                android:textAlignment="center"
                android:layout_below="@id/orders_adapter_fragment_desc"

                />

            <TextView
                android:id="@+id/orders_adapter_fragment_deadline"
                android:layout_width="145dp"
                android:layout_height="18dp"
                android:layout_marginStart="73dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:hint="deadline"
                android:textAlignment="center"
                android:layout_below="@id/orders_adapter_fragment_desc"
                android:layout_toRightOf="@id/orders_adapter_fragment_created" />

            <TextView
                android:id="@+id/orders_adapter_fragment_price"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="92dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="20dp"
                android:hint="textView"
                android:textAlignment="center"
             android:layout_below="@id/orders_adapter_fragment_title"/>
       </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>