<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/executor_reviews_adapter_frg_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:padding="5sp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/executor_reviews_adapter_frg_text"
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:text="text"
                android:padding="5sp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_below="@id/executor_reviews_adapter_frg_photo"
                />

            <TextView
                android:id="@+id/executor_reviews_adapter_frg_assessment"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30sp"
                android:text="rating"
                android:padding="5sp"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/executor_reviews_adapter_frg_photo"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:padding="5sp"
                app:srcCompat="@drawable/add_a_photo_black_20dp" />

            <TextView
                android:id="@+id/executor_reviews_adapter_frg_name"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/executor_reviews_adapter_frg_photo"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:text="TextView" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>