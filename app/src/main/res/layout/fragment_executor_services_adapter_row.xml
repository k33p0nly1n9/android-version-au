<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/executor_services_adapter_frg_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBbb2"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="2sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBbb2"
            android:padding="4sp">
            <TextView
                android:id="@+id/executor_services_adapter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:ems="12"
                android:textStyle="bold"
                android:text="Реставрация старых книг, создание своего переплета"
            />

            <TextView
                android:id="@+id/executor_services_adapter_frg_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/executor_services_adapter_title"
                android:layout_centerVertical="true"
                android:layout_marginStart="5sp"
                android:text="20000"
                android:ems="5"
               android:gravity="right" />
            <View
                android:id="@+id/executor_services_adapter_frg_view"
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:layout_below="@id/executor_services_adapter_title"
                android:layout_marginTop="10sp"
                android:background="@color/colorMutedGray2"
                android:padding="10sp">
            </View>

            <TextView
                android:id="@+id/executor_services_adapter_frg_txtprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5sp"
                android:layout_marginStart="2sp"
                android:textColor="@color/colorMutedText"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/executor_services_adapter_frg_price"
                android:text="тг" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>