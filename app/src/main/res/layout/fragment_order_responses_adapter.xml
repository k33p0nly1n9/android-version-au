<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_responses_adapter_row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="4sp"
        android:layout_height="wrap_content">


        <RelativeLayout
           android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/order_responses_adapter_image"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_marginStart="2sp"
                android:layout_marginTop="10sp"
                android:clickable="true"
                app:srcCompat="@drawable/executors_default_image" />

            <TextView
                android:id="@+id/order_responses_adapter_pname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:layout_marginTop="10sp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="8sp"
                android:layout_toRightOf="@id/order_responses_adapter_image"
                android:text="Name Lastname" />


            <TextView
                android:id="@+id/order_responses_adapter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_responses_adapter_pname"
                android:layout_marginStart="8sp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="8sp"
                android:layout_toRightOf="@id/order_responses_adapter_image"
                android:text="TextVextViewextViewextViewextViewextVieorder_responses_adapter_textorder_responses_adapter_textorder_responses_adapter_textorder_responses_adapter_textorder_responses_adapter_textorder_responses_adapter_textorder_responses_adapter_textorder_responses_adapter_textorder_responses_adapter_textwextViewextViewextViewextViewextViewextViewextViewextViewextViewextViewextViewextViewextViewextViewiew" />

            <TextView
                android:id="@+id/order_responses_adapter_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7sp"
                android:textAlignment="center"
                android:layout_toLeftOf="@id/order_responses_adapter_btn_popup"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="7sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/order_responses_adapter_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_responses_adapter_text"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="7sp"
                android:textAlignment="center"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="30sp"
                android:text="TextView" />
            <Button
                android:id="@+id/order_responses_adapter_btn_popup"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4sp"
                android:background="@drawable/menu_icon"
                android:clickable="true"></Button>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>