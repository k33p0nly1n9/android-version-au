<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_myForm_services_adapter"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="4sp"
            android:background="@color/colorBackground"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/profile_myForm_services_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5sp"
                android:layout_centerVertical="true"
                android:text="Реставрация старых книг, создание своего переплета"
                android:layout_marginEnd="5sp"
                android:ems="13"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_myForm_services_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/profile_myForm_services_title"
                android:text="2000"
                android:textAlignment="center"
                android:layout_marginEnd="5sp"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/profile_myForm_services_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:visibility="visible"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp" />

            <View
                android:id="@+id/profile_myForm_services_view"
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:layout_below="@id/profile_myForm_services_title"
                android:layout_marginTop="10sp"
                android:background="@color/colorMutedGray2"
                android:padding="10sp">
            </View>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>