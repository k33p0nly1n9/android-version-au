<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/frg_bkmk_specials_adapter_layout"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:background="@color/colorWhite"
        android:padding="5sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="5sp">

            <TextView
                android:id="@+id/frg_bkmk_specials_adapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorMutedGray2"
                android:layout_marginEnd="10dp"
                android:layout_toRightOf="@id/frg_bkmk_specials_adapter_image"
                android:text="name" />

            <TextView
                android:id="@+id/frg_bkmk_specials_adapter_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frg_bkmk_specials_adapter_name"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="7sp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorMutedGray2"
                android:layout_toRightOf="@id/frg_bkmk_specials_adapter_image"
                android:text="specialization" />
            <TextView
                android:id="@+id/frg_bkmk_specials_adapter_txtrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frg_bkmk_specials_adapter_spec"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@id/frg_bkmk_specials_adapter_image"
                android:text="Рейтинг:"
                android:textColor="@color/colorMutedText" />

            <TextView
                android:id="@+id/frg_bkmk_specials_adapter_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frg_bkmk_specials_adapter_spec"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@id/frg_bkmk_specials_adapter_txtrating"
                android:text="50"
                android:textColor="@color/colorMutedGray2" />

            <TextView
                android:id="@+id/frg_bkmk_specials_adapter_txtrating2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frg_bkmk_specials_adapter_spec"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@id/frg_bkmk_specials_adapter_rating"
                android:text="/100"
                android:textColor="@color/colorMutedText" />

            <ImageView
                android:id="@+id/frg_bkmk_specials_adapter_image"
                android:layout_width="80dp"
                android:src="@drawable/executors_default_image"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="11dp" />

            <CheckBox
                android:id="@+id/frg_bkmk_specials_adapter_chbox"
                android:layout_width="wrap_content"
                android:layout_below="@id/frg_bkmk_specials_adapter_btn_popup"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="5sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

            <Button
                android:id="@+id/frg_bkmk_specials_adapter_btn_popup"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4sp"
                android:background="@drawable/menu_icon"
                android:clickable="true"></Button>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>