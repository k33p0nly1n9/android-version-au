<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/executors_adapter_frg_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:padding="5sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="5sp">

            <TextView
                android:id="@+id/executors_adapter_frg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toRightOf="@id/executors_adapter_frg_photo"
                android:text="name"
                android:textColor="@color/colorMutedGray2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/executors_adapter_frg_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/executors_adapter_frg_name"
                android:layout_marginStart="16dp"
                android:layout_marginTop="7sp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/executors_adapter_frg_photo"
                android:text="specialization"
                android:textColor="@color/colorMutedGray2" />

            <TextView
                android:id="@+id/executors_adapter_frg_txtrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/executors_adapter_frg_spec"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@id/executors_adapter_frg_photo"
                android:text="Рейтинг:"
                android:textColor="@color/colorMutedText" />

            <TextView
                android:id="@+id/executors_adapter_frg_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/executors_adapter_frg_spec"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@id/executors_adapter_frg_txtrating"
                android:hint="50"
                android:textColor="@color/colorMutedGray2" />

            <TextView
                android:id="@+id/executors_adapter_frg_txtrating2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/executors_adapter_frg_spec"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@id/executors_adapter_frg_rating"
                android:text="/100"
                android:textColor="@color/colorMutedText" />


            <ImageView
                android:id="@+id/executors_adapter_frg_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="11dp"
                android:src="@drawable/executors_default_image" />

            <Button
                android:id="@+id/executors_adapter_frg_btn_popup"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4sp"
                android:background="@drawable/menu_icon"
                android:clickable="true"></Button>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>