<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/executors_adapter_frg_layout"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:padding="5sp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="89dp">

            <TextView
                android:id="@+id/executors_adapter_frg_name"
                android:layout_width="231dp"
                android:layout_height="22sp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="13dp"
                android:text="name"
                app:layout_constraintBottom_toTopOf="@+id/executors_adapter_frg_desc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/executors_adapter_frg_photo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/executors_adapter_frg_desc"
                android:layout_width="241dp"
                android:layout_height="24sp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="11dp"
                android:text="specialization"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/executors_adapter_frg_photo"
                app:layout_constraintTop_toBottomOf="@+id/executors_adapter_frg_name" />

            <ImageView
                android:id="@+id/executors_adapter_frg_photo"
                android:layout_width="56dp"
                android:layout_height="62dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="11dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/executors_adapter_frg_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/add_a_photo_black_20dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>