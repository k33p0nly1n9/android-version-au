<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.AppCompat.DayNight.DarkActionBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/profile_imageView"
        android:layout_width="124dp"
        android:layout_height="137dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="42dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="484dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_weight="1">

        <Button
            android:id="@+id/profile_edit"
            android:layout_width="336dp"
            android:layout_height="48dp"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="16dp"
            android:padding="10dp"
            android:text="@string/profile_edit" />

        <Button
            android:id="@+id/profile_orders"
            android:layout_width="336dp"
            android:layout_height="48dp"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="16dp"
            android:text="@string/profile_orders" />

        <Button
            android:id="@+id/profile_form"
            android:layout_width="336dp"
            android:layout_height="48dp"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="16dp"
            android:text="@string/profile_form" />

        <Button
            android:id="@+id/profile_reviews"
            android:layout_width="336dp"
            android:layout_height="48dp"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="125dp"
            android:text="@string/profile_reviews"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_form"
            app:layout_constraintVertical_bias="0.098" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="230dp"
        android:layout_marginTop="30sp"
        android:layout_height="234dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/profile_name"
            android:layout_width="119dp"
            android:layout_height="24dp"

            android:layout_marginTop="73dp"
            android:layout_marginBottom="15dp"
            android:text="Имя Фамилия" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="59dp"
                android:layout_height="22dp"
                android:layout_marginBottom="15dp"
                android:text="Рейтинг:" />

            <TextView
                android:id="@+id/profile_rating"
                android:layout_width="64dp"
                android:layout_height="22dp"
                android:layout_marginEnd="104dp"
                android:text="7" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginBottom="540dp"
                android:text="Статус:" />

            <TextView
                android:id="@+id/profile_status"
                android:layout_width="63dp"
                android:layout_height="22dp"
                android:text="online" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>