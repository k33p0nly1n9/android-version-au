<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bookm_adapter_row_layout"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:layout_margin="4sp"
        android:layout_marginTop="5sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4sp"
            app:layout_constraintBottom_toTopOf="@id/orders_adapter_layout"
            app:layout_constraintTop_toTopOf="@id/executors_adapter_name">

            <TextView
                android:id="@+id/bookm_adapter_title"
                android:layout_width="175dp"
                android:layout_height="35dp"
                android:layout_marginStart="76dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"
                android:text="Specialization"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/orders_adapter_descr"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/bookm_adapter_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="27dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/bookm_adapter_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/add_a_photo_black_20dp" />

            <TextView
                android:id="@+id/bookm_adapter_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="370dp"
                tools:layout_editor_absoluteY="41dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>