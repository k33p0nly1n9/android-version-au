<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/createform_service_dialog"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/createform_service_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10sp"
        android:hint="Название"
        android:maxLength="200"
        android:padding="10sp"></EditText>

    <EditText
        android:id="@+id/createform_service_dialog_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/createform_service_dialog_title"
        android:layout_marginStart="10sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10sp"
        android:hint="Цена"
        android:inputType="number|numberDecimal"
        android:padding="10sp"></EditText>

    <Button
        android:id="@+id/createform_service_dialog_btnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/createform_service_dialog_price"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15sp"
        android:padding="10sp"
        android:text="Сохранить"></Button>

    <Button
        android:id="@+id/createform_service_dialog_btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/createform_service_dialog_price"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10sp"
        android:padding="10sp"
        android:text="Отменить"></Button>

</RelativeLayout>