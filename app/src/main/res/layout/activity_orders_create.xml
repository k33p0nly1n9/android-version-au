<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Orders_createActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/orders_create_layout"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Раздел:"
                android:textSize="14sp"></TextView>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/orders_create_section"
                android:layout_marginTop="10sp"></Spinner>

            <EditText
                android:id="@+id/orders_create_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:ems="10"
                android:hint="title:"
                android:inputType="text"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/orders_create_desciptn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:ems="10"
                android:hint="description"
                android:textSize="18sp"
                android:inputType="text" />


            <EditText
                android:id="@+id/orders_create_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:ems="10"
                android:hint="price:"
                android:textSize="18sp"
                android:inputType="number" />


            <CheckBox
                android:id="@+id/orders_create_checkPrice"
                android:layout_width="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_height="wrap_content"
                android:text="Рассмотрю варианты" />


            <com.santalu.maskedittext.MaskEditText
                android:id="@+id/orders_create_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:ems="10"
                android:hint="deadline:"
                android:inputType="date"
                app:met_mask="##.##.####"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/orders_create_checkDeadline"
                android:layout_marginTop="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not important" />


            <Button
                android:id="@+id/orders_create_btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="20sp"
                android:text="Ok"
                android:textSize="18sp"
                />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>