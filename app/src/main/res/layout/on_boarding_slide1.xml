<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="110sp"
    android:padding="20sp">

    <ImageView
        android:id="@+id/slide1_image"
        android:layout_width="wrap_content"
        android:src="@drawable/slide1"
        android:layout_centerHorizontal="true"
        android:layout_height="250sp"></ImageView>
    <TextView
        android:id="@+id/slide1_title"
        android:layout_below="@id/slide1_image"
        android:layout_width="wrap_content"
        android:textSize="25sp"
        android:text="@string/first_slide_title"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorMutedGray2"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/slide1_text"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_below="@id/slide1_title"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/first_slide_desc"
        android:textColor="@color/colorMutedText"
        android:textSize="15sp"></TextView>
</RelativeLayout>