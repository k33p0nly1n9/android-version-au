<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/frg_msg_adapter_layout"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:background="@color/colorWhite"
        android:padding="5sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBbb2"
            android:padding="5sp">

            <TextView
                android:id="@+id/frg_msg_adapter_pName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_toRightOf="@id/frg_msg_adapter_pPhoto"
                android:text="name"
                android:textColor="@color/colorMutedGray2"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/frg_msg_adapter_pPhoto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="11dp"
                android:src="@drawable/executors_default_image" />

            <Button
                android:id="@+id/frg_msg_adapter_btn_popup"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4sp"
                android:background="@drawable/ic_actions_more_vert"
                android:clickable="true"></Button>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>