<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".TestImageActivity">

    <EditText
        android:id="@+id/testImage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="99dp" />

    <ImageView
        android:id="@+id/testImage_image"
        android:layout_width="383dp"
        android:layout_height="115dp"
        app:srcCompat="@drawable/add_a_photo_black_20dp" />

    <Button
        android:id="@+id/testImage_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="choose" />

    <Button
        android:id="@+id/testImage_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add" />



    <Button
        android:id="@+id/testImage_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="list" />

</LinearLayout>