<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20sp"
    android:layout_gravity="center">
<TextView
    android:text="Вы уверены, что хотите удалить?"
    android:layout_width="match_parent"
    android:layout_marginTop="20sp"
    android:textAlignment="center"
    android:id="@+id/dialog_answer_delete_tv"
    android:layout_height="wrap_content"></TextView>

    <Button
        android:id="@+id/dialog_answer_delete_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10sp"
        android:layout_below="@id/dialog_answer_delete_tv"
        android:layout_marginTop="25dp"
        android:textAllCaps="false"
        android:layout_marginEnd="15sp"
        android:padding="10sp"
        android:layout_marginLeft="20sp"
        android:text="Да"></Button>

    <Button
        android:id="@+id/dialog_answer_delete_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15sp"
        android:layout_below="@id/dialog_answer_delete_tv"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10sp"
        android:padding="10sp"
        android:text="Отменить"></Button>


</RelativeLayout>