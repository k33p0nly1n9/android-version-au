<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistrationActivity">

    <ScrollView
        android:id="@+id/registr_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/regist_btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Зарегистрироваться"
                android:layout_centerHorizontal="true"
             android:layout_below="@id/regist_passwd2"/>

            <EditText
                android:id="@+id/regist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/regist_image"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="35dp"
                android:ems="10"
                android:hint="Имя:"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/regist_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/regist_name"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="35dp"
                android:ems="10"
                android:hint="Фамилия:"
                android:inputType="textPersonName" />

            <com.santalu.maskedittext.MaskEditText
                android:id="@+id/regist_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/regist_lastname"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="35dp"
                android:ems="10"
                android:hint="Номер:"
                android:inputType="phone"
                app:met_mask="+7(###) ### ## ##" />


            <EditText
                android:id="@+id/regist_passwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/regist_number"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="35dp"
                android:ems="10"
                android:hint="Пароль:"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/regist_passwd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/regist_passwd"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="35dp"
                android:ems="10"
                android:hint="Подтвердите пароль:"
                android:inputType="textPersonName" />

            <ImageButton
                android:id="@+id/regist_image"
                android:layout_width="134dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="47dp"
                app:srcCompat="@drawable/add_a_photo_black_20dp" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>