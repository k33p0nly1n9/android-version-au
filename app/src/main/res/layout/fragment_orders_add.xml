<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.Fragment_orders_add">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground">

            <TextView
                android:id="@+id/orders_add_tvsection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4sp"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="4sp"
                android:text="Раздел"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/orders_add_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_add_tvsection"
                android:layout_marginStart="4sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="4sp" />


            <TextView
                android:id="@+id/orders_add_tvtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_add_section"
                android:layout_marginStart="4sp"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="4sp"
                android:text="Название"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/orders_add_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_add_tvtitle"
                android:layout_marginStart="4sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="4sp"
                android:ems="10"
                android:hint=""
                android:inputType="text"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/orders_add_tvdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_add_title"
                android:layout_marginStart="4sp"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="4sp"
                android:text="Описание"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/orders_add_descr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_add_tvdesc"
                android:layout_marginStart="4sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="4sp"
                android:hint="" />

            <TextView
                android:id="@+id/orders_add_tvprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_add_descr"
                android:layout_marginStart="4sp"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="4sp"
                android:text="Бюджет"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/orders_add_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_add_tvprice"
                android:layout_marginStart="4sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="4sp"
                android:ems="10"
                android:hint=""
                android:inputType="number"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/orders_add_tvdeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_add_price"
                android:layout_marginStart="4sp"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="4sp"
                android:text="Сроки до"
                android:textSize="16sp" />


            <com.santalu.maskedittext.MaskEditText
                android:id="@+id/orders_add_deadlinee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_add_tvdeadline"
                android:layout_marginStart="4sp"
                android:layout_toStartOf="@id/orders_add_checkDeadl"
                android:layout_marginTop="10sp"
                android:layout_alignParentStart="true"
                android:ems="10"
                android:hint=""
                android:inputType="date"
                android:textSize="18sp"
                app:met_mask="####.##.##" />

            <CheckBox
                android:id="@+id/orders_add_checkDeadl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="10sp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="15sp"
                android:layout_alignBottom="@id/orders_add_deadlinee"
                android:layout_marginEnd="4sp"
                android:text="Не ограничены"
                android:textColor="@color/colorMutedGray2" />


            <Button
                android:id="@+id/dialog_orders_add_btnOk"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_add_checkDeadl"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4sp"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="4sp"
                android:layout_marginBottom="20sp"
                android:background="@color/colorMutedGray2"
                android:enabled="true"
                android:text="Сохранить"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialog_orders_add_btnCancel"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_add_checkDeadl"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4sp"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="4sp"
                android:layout_marginBottom="20sp"
                android:background="@color/colorMutedGray2"
                android:enabled="true"
                android:text="Отменить"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>
</FrameLayout>
