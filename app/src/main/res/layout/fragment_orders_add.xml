<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragments.Fragment_orders_add">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4sp"
                android:layout_marginEnd="4sp"
                android:text="Раздел"
                android:layout_marginTop="25sp"
                android:id="@+id/orders_add_tvsection"
                android:textSize="16sp"></TextView>

            <Spinner
                android:id="@+id/orders_add_section"
                android:layout_width="match_parent"
                android:layout_marginStart="4sp"
                android:layout_marginEnd="4sp"
                android:layout_below="@id/orders_add_tvsection"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"></Spinner>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название"
                android:layout_marginTop="25sp"
                android:layout_below="@id/orders_add_section"
                android:layout_marginStart="4sp"
                android:layout_marginEnd="4sp"
                android:id="@+id/orders_add_tvtitle"
                android:textSize="16sp"></TextView>

            <EditText
                android:id="@+id/orders_add_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_add_tvtitle"
                android:layout_marginTop="10sp"
                android:ems="10"
                android:layout_marginStart="4sp"
                android:layout_marginEnd="4sp"
                android:hint=""
                android:inputType="text"
                android:textSize="18sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Описание"
                android:layout_marginTop="25sp"
                android:layout_below="@id/orders_add_title"
                android:layout_marginStart="4sp"
                android:layout_marginEnd="4sp"
                android:id="@+id/orders_add_tvdesc"
                android:textSize="16sp"></TextView>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/orders_add_descr"
                android:layout_marginTop="10sp"
                android:layout_marginStart="4sp"
                android:layout_marginEnd="4sp"
                android:layout_height="wrap_content"
                android:hint=""
                android:layout_below="@id/orders_add_tvdesc"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Бюджет"
                android:layout_marginTop="25sp"
                android:layout_below="@id/orders_add_descr"
                android:layout_marginStart="4sp"
                android:layout_marginEnd="4sp"
                android:id="@+id/orders_add_tvprice"
                android:textSize="16sp"></TextView>

            <EditText
                android:id="@+id/orders_add_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:ems="10"
                android:layout_marginStart="4sp"
                android:layout_marginEnd="4sp"
                android:layout_below="@id/orders_add_tvprice"
                android:hint=""
                android:inputType="number"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сроки до"
                android:layout_marginTop="25sp"
                android:layout_below="@id/orders_add_price"
                android:layout_marginStart="4sp"
                android:layout_marginEnd="4sp"
                android:id="@+id/orders_add_tvdeadline"
                android:textSize="16sp"></TextView>


            <com.santalu.maskedittext.MaskEditText
                android:id="@+id/orders_add_deadlinee"
                app:met_mask="##.##.####"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:ems="10"
                android:layout_below="@id/orders_add_tvdeadline"
                android:hint=""
                android:layout_marginStart="4sp"
                android:layout_marginEnd="4sp"
                android:inputType="date"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/orders_add_checkDeadl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orders_add_deadlinee"
                android:layout_marginTop="10sp"
                android:text="Не ограничены" />


            <Button
                android:id="@+id/dialog_orders_add_btnOk"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="20sp"
                android:text="Сохранить"
                android:layout_marginStart="4sp"
                android:layout_marginEnd="4sp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/orders_add_checkDeadl"
                android:textAllCaps="false"
                android:textSize="18sp" />
            <Button
                android:id="@+id/dialog_orders_add_btnCancel"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="20sp"
                android:text="Отменить"
                android:layout_marginStart="4sp"
                android:layout_marginEnd="4sp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/orders_add_checkDeadl"
                android:textAllCaps="false"
                android:textSize="18sp" />

        </RelativeLayout>
    </ScrollView>
</FrameLayout>
