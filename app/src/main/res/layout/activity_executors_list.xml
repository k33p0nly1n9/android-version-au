<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Executors_list_activity">

    <Button
        android:id="@+id/executors_list_btn_addExecutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add executor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></Button>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/executors_list_rv"
        android:layout_width="match_parent"
        android:layout_height="672dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/executors_list_btn_addExecutor"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
