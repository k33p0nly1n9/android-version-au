<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_createresponse_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_createresponse_linearlayout"
        android:layout_width="match_parent"
        android:layout_marginStart="10sp"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10sp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:id="@+id/dialog_createresponse_price"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:hint="Предлагаемая цена">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:ems="5"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxEms="3"
                android:drawableStart="@drawable/ic_actions_star"
                android:drawablePadding="10sp"
                android:textColor="@color/colorMutedGray2"
                android:textColorHint="@color/colorMutedText">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:id="@+id/dialog_createresponse_desc"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="700"
            android:layout_marginTop="20sp"
            android:hint="Описание">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/colorMutedGray2"
                android:textColorHint="@color/colorMutedText">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


