        android:layout_marginStart="10sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10sp"
        android:hint="Цена"
        android:inputType="number|numberDecimal"
        android:padding="10sp"></EditText>-->

    <Button
        android:id="@+id/dialog_createresponse_btnsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_createresponse_linearlayout"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15sp"
        android:padding="10sp"
        android:text="Сохранить"
        android:background="@color/colorMutedGray2"
        android:enabled="true"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="20sp"
        android:textSize="18sp"
        android:textStyle="bold"
        ></Button>

    <Button
        android:id="@+id/dialog_createresponse_btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_createresponse_linearlayout"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10sp"
        android:padding="10sp"
        android:text="Отменить"
        android:background="@color/colorMutedGray2"
        android:enabled="true"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        ></Button>

</RelativeLayout>