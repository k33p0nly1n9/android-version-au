<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">

    <TextView
        android:id="@+id/first_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorMutedGray2"
        android:text="Войдите, чтобы продолжить"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40sp"
        android:transitionName="splash_transition_powered"/>

    <Button
        android:id="@+id/first_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:background="@color/colorMutedGray2"
        android:enabled="true"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:padding="10sp"
        android:transitionName="transition_splash_image"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_below="@id/first_txt"
        android:layout_marginTop="140dp"
        android:text="Авторизоваться" />

    <Button
        android:id="@+id/first_registr"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_auth"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:background="@color/colorMutedGray2"
        android:enabled="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginTop="70dp"
        android:text="Зарегистрироваться" />

</RelativeLayout>