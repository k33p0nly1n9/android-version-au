<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.Fragment_person_profile_info">

    <RelativeLayout
        android:id="@+id/fragment_person_profile_info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:padding="5sp">

        <TextView
            android:id="@+id/fragment_person_profile_info_tvdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:padding="5sp"
            android:text="Описание"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fragment_person_profile_info_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_person_profile_info_tvdesc"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:padding="5sp"
            android:text="desc"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/fragment_person_profile_info_view"
            android:background="@color/gray"
            android:padding="10sp"
            android:layout_marginTop="10sp"
            android:layout_below="@id/fragment_person_profile_info_desc"
            android:layout_height="0.5sp">

        </View>


        <TextView
            android:id="@+id/fragment_person_profile_info_tvcontacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_person_profile_info_view"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:padding="5sp"
            android:text="Контакты"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fragment_person_profile_info_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_person_profile_info_tvcontacts"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:padding="5sp"
            android:text="телефон"
            android:textSize="14sp" />

        <Button
            android:id="@+id/fragment_person_profile_info_btn_call"
            android:layout_width="wrap_content"
            android:layout_height="37sp"
            android:layout_below="@id/fragment_person_profile_info_tvcontacts"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10sp"
            android:layout_marginRight="5sp"
            android:padding="5sp"
            android:text="Связаться"
            android:textSize="14sp" />
    </RelativeLayout>

</FrameLayout>
